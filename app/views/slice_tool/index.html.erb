<div class="profile-container">
  <div class="profile-sidebar">
    <div class="profile-sidebar-item-active">
      <%= link_to 'slice' do %>
        <%= image_tag('profile-code.png') %>
      <% end %>
    </div>
    <div class="profile-sidebar-item">
      <%= link_to 'templates' do %>
        <%= image_tag('profile-list.png') %>
      <% end %>
    </div>
    <div class="profile-sidebar-item">
      <%= link_to 'profile' do %>
        <%= image_tag('profile-user.png') %>
      <% end %>
    </div>
    <div class="profile-sidebar-item">
      <%= image_tag('profile-gear.png') %>
    </div>
  </div>
  <% if @continued %>
    <div class="width-100">
      <%= react_component('SliceToolManager',
       user: current_user,
       manager_state: @manager_state,
       tracker_state: @tracker_state,
       email_name: @template.name,
       email_width: @template.email_width,
       returned_urls: @images,
       template_id: @template.id) %>
   </div>
  <% else %>
    <div class="width-100">
      <%= react_component('SliceToolManager',
      user: current_user,
      manager_state: 0,
      tracker_state: 0,
      email_name: '',
      email_width: 0,
      returned_urls: [],
      template_id: '') %>
    </div>
  <% end %>
</div>
