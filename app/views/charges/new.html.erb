<div class="charge-form-container">
  <div class="charge-card">
    <div class="charge-card-top">
      Code emails faster forever with a one time payment
    </div>
    <div class="charge-card-bottom">
      <%= form_tag charges_path do %>
        <article>
          <% if flash[:error].present? %>
            <div id="error_explanation">
              <p><%= flash[:error] %></p>
            </div>
          <% end %>
          <label class="amount">
            <span>Amount: $299</span>
          </label>
        </article>

        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                data-name="Pigeon Post"
                data-description="Unlimited Subscription"
                data-image="<%= asset_path 'primary-pigeon.png' %>"
                data-amount="500"
                data-label="Build emails faster"
                data-zip-code=true
                data-billing-address=true
                data-email="<%= current_user.email %>"
                data-locale="auto"></script>
      <% end %>
    </div>
  </div>
</div>
