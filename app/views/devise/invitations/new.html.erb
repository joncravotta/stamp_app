
<div class="profile-container">
  <%= render :partial => "partials/side_nav", :locals => {:active => 4} %>
  <div class="profile-content">
    <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post, :class => "account-name-container"} do |f| %>
      <%= devise_error_messages! %>
      <span class="account-name-title">Invite people to the party</span>
      <div class="slice-component-container">
        <% resource.class.invite_key_fields.each do |field| -%>
          <%= f.text_field field,class: "input-lg", placeholder: "Email"  %></p>
        <% end -%>
      </div>
      <%= f.submit t("devise.invitations.new.submit_button"), class:"dark-button"  %>
    <% end %>
  </div>
</div>
