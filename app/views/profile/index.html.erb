<div class="profile-container">
  <%= render :partial => "partials/side_nav", :locals => {:active => 3} %>
  <div class="profile-content">
  <div class="profile-top-dashboard-container">
    <div class="profile-top-dashboard-item">
      <div class="profile-top-dashboard-item-group">
          <i class="fa fa-file-text-o  fa-lg" aria-hidden="true"></i>
          <span class="profile-dashboard-item-title">Emails left:</span>
            <span class="profile-dashboard-item-count"><%= @account.email_count %></span>
        </div>
      </div>
    <div class="profile-top-dashboard-item">
      <div class="profile-top-dashboard-item-group">
        <i class="fa fa-calendar fa-lg" aria-hidden="true"></i>
        <span class="profile-dashboard-item-title">Next Bill</span>
        <span class="profile-dashboard-item-count">
        <% time = Time.at(@account.stripe_current_period_end) %>
        <%= time.strftime("%m/%d/%Y")  %></span>
      </div>
    </div>
    <div class="profile-top-dashboard-item">
      <div class="profile-top-dashboard-item-group">
        <i class="fa fa-tags fa-lg" aria-hidden="true"></i>
        <span class="profile-dashboard-item-title">Subscription type</span>
        <span class="profile-dashboard-item-count">
        <%= @account.stripe_sub_type %>
        </span>
      </div>
    </div>
    <div class="profile-top-dashboard-item">
      <div class="profile-top-dashboard-item-group">
        <i class="fa fa-users fa-lg" aria-hidden="true"></i>
        <span class="profile-dashboard-item-title">Seats left</span>
        <span class="profile-dashboard-item-count">
        <%= @account.seat_count %>
        </span>
      </div>
    </div>
  </div>
  <div class="profile-dashboard-card">
    <span class="profile-dashboard-card-title">
      Upgrade Membership
    </span>
    <span class="profile-dashboard-card-desc">
      If you cancel your membership you will have acces to pigeon post until your next bill date.
    </span>
    <div class="profile-button-width primary-button margin-top-50px">
      Upgrade
    </div>
  </div>

  <div class="profile-dashboard-card">
    <span class="profile-dashboard-card-title">
      Update Card Info
    </span>
    <span class="profile-dashboard-card-desc">
      If you cancel your membership you will have acces to pigeon post until your next bill date.
    </span>
    <div class="profile-button-width dark-button margin-top-50px">
      Update
    </div>
  </div>

  <div class="profile-dashboard-card">
    <span class="profile-dashboard-card-title">
      Cancel Subscription
    </span>
    <span class="profile-dashboard-card-desc">
      If you cancel your membership you will have acces to pigeon post until your next bill date.
    </span>
    <div class="profile-button-width danger-button margin-top-50px">
      Cancel
    </div>
  </div>
  </div>
</div>
